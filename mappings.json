{
  "settings": {
    "number_of_shards": 1,
    "analysis": {
      "filter": {
        "ngram_filter": {
          "type": "edge_ngram",
          "min_gram": 4,
          "max_gram": 20
        }
      },
      "char_filter": {
        "removeNonDigits": {
          "type": "pattern_replace",
          "pattern": "\\D",
          "replacement": ""
        },
        "prependCenturyToAccessionNumber": {
          "type": "pattern_replace",
          "pattern": "^L?(\\d{2}\\..*)",
          "replacement": "19$1"
        }
      },
      "analyzer": {
        "rawFolding": {
          "tokenizer": "keyword",
          "filter":  [ "lowercase", "asciifolding" ]
        },
        "folding": {
          "tokenizer": "standard",
          "filter":  [ "lowercase", "asciifolding" ]
        },
        "ngram": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ngram_filter"
          ]
        },
        "lowercase_sort": {
          "tokenizer": "keyword",
          "filter":  [ "lowercase" ]
        },
        "polishAccessionNumber": {
          "type": "custom",
          "tokenizer": "keyword",
          "char_filter": ["prependCenturyToAccessionNumber", "removeNonDigits"]
        }
      }
    }
  },
  "mappings": {
    "object_data": {
      "properties": {
        "accession_number": {
          "type": "multi_field",
          "fields": {
            "accession_number": { "type": "string", "index": "not_analyzed" },
            "sort": { "type": "string", "analyzer": "polishAccessionNumber" }
          }
        },
        "artist": {
          "type": "multi_field",
          "fields": {
            "artist": { "type": "string", "analyzer": "snowball" },
            "raw": { "type": "string", "index": "not_analyzed" },
            "folded": { "type": "string", "analyzer": "folding" },
            "rawFolded": { "type": "string", "analyzer": "rawFolding" },
            "ngram": {"type": "string", "analyzer": "ngram" }
          }
        },
        "continent": { "type": "string" },
        "country": {
          "type": "string",
          "fields": {
            "raw": { "type": "string", "index": "not_analyzed" }
          }
        },
        "creditline": {
          "type": "string",
          "fields": {
            "raw": {"type": "string", "index": "not_analyzed"}
          }
        },
        "culture": { "type": "string" },
        "dated": { "type": "string" },
        "department": {
          "type": "string",
          "fields": {
            "raw": {"type": "string", "index": "not_analyzed" }
          }
        },
        "description": { "type": "string" },
        "dimension": { "type": "string" },
        "id": { "type": "integer" },
        "image": { "type": "string" },
        "image_copyright": { "type": "string" },
        "image_height": { "type": "long" },
        "image_width": { "type": "long" },
        "rights": { "type": "string", "index": "not_analyzed" },
        "life_date": { "type": "string" },
        "marks": { "type": "string" },
        "medium": {
          "type": "string",
          "fields": {
            "raw": { "type": "string", "index": "not_analyzed" },
            "stop": { "type": "string", "analyzer": "stop" }
          }
        },
        "nationality": { "type": "string" },
        "provenance": { "type": "string" },
        "public_access": { "type": "long" },
        "restricted": { "type": "long" },
        "role": { "type": "string" },
        "room": { "type": "string", "fields": {"raw": {"type": "string", "index": "not_analyzed"}}},
        "style": { "type": "string", "fields": {"raw": {"type": "string", "index": "not_analyzed"}}},
        "text": {
          "type": "string",
          "fields": {
            "text": {"type": "string", "analyzer": "snowball"},
            "folded": { "type": "string", "analyzer": "folding" }
          }
        },
        "title": {
          "type": "multi_field",
          "fields": {
            "title": {"type": "string", "analyzer": "snowball"},
            "raw": { "type": "string", "index": "not_analyzed" },
            "folded": { "type": "string", "analyzer": "folding" },
            "rawFolded": { "type": "string", "analyzer": "rawFolding" },
            "ngram": {"type": "string", "analyzer": "ngram" },
            "sort": {"type": "string", "analyzer": "lowercase_sort"}
          }
        },
        "tags": { "type": "string" },
        "deaccessionedDate": {
          "type" : "date",
          "format" : "dateOptionalTime"
        },
        "artist_suggest": {
          "type": "completion",
          "index_analyzer": "rawFolding"
        },
        "highlight_artist_suggest": {
          "type": "completion",
          "index_analyzer": "rawFolding"
        },
        "title_suggest": {
          "type": "completion",
          "index_analyzer": "rawFolding"
        },
        "highlight_title_suggest": {
          "type": "completion",
          "index_analyzer": "rawFolding"
        }
      }
    }
  }
}
